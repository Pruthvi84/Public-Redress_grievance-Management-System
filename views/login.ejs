
<%- include("partials/header"); -%>
<div class="login-form ">
    <form action="/loginpage" method="post" class="formgrad">
        <h2 class="text-center">Log in</h2>
        <div class="form-group formgrad">
            <input type="text" class="form-control loggrad" name="username" placeholder="Username" required="required">
        </div>
        <div class="form-group formgrad">
            <input type="password" name="password" class="form-control loggrad" placeholder="Password" required="required">
        </div>
        <div class="form-group formgrad">
            <button type="submit" class="btn-login btn-primary btn-block">Let me in :)</button>
        </div>
        <div class="clearfix formgrad">
            <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
            <a href="/adminlogin" class="float-right">Admin Login</a>
        </div>
    </form>
    <p class="text-center"><a href="/registration">Create an Account</a></p>
</div>
<%- include("partials/footer"); -%>
